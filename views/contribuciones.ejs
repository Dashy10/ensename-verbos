      </div>


    <footer class = 'contribuciones'>
      <span><a href="./">Hogar</a></span>
      <span>Sobre</span>
      <span>Contacto</span>
    </footer>

    <% if(data) { %>
        <% include ./partials/users %>
       <% } %>


  <% include ./partials/scripts %>
  </body>
</html>
